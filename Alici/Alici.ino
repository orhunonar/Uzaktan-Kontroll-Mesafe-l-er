#include <SPI.h>
#include <nRF24L01.h>
#include <RF24.h>
RF24 radio(9, 10); // CE, CSN
const byte address[6] = "00001";
void setup() {
  Serial.begin(9600);
  radio.begin();
  radio.openReadingPipe(0, address);
  radio.setPALevel(RF24_PA_MIN);
  radio.startListening();
  radio.setChannel(101);
}
void loop() {
  unsigned char text;
  if (radio.available()) {
    
    radio.read(&text, sizeof(char));
    Serial.print("Received :");
    Serial.println(text);
    delay(100);
  }
}
